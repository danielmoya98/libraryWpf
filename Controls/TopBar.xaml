<UserControl x:Class="library.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:library.ViewModels"
             x:Name="root"
             SnapsToDevicePixels="True"
             Background="Transparent">

    <!-- VM local (si usas inyección, quítalo y setea DataContext desde el Shell) -->
    <UserControl.DataContext>
        <vm:TopBarViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Botón de icono para el header -->
        <Style x:Key="HeaderIconButton" TargetType="Button">
            <Setter Property="Foreground" Value="#99000000" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" CornerRadius="12" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#0D000000" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1A000000" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ======= TOPBAR COMO MATERIAL CARD ======= -->
    <materialDesign:Card
        UniformCornerRadius="10"
        Padding="5"
        Margin="0 8 8 8"
        Background="White"
        BorderBrush="{StaticResource Brush.Border}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- SEARCH PILL dentro de una Material Card con esquinas redondeadas -->


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />   <!-- leading icon area -->
                    <ColumnDefinition Width="*" />    <!-- text -->
                    <ColumnDefinition Width="44" />   <!-- trailing clear -->
                </Grid.ColumnDefinitions>

                <!-- Icono de búsqueda (estilo botón para mejor hit-area) -->
                <Button Grid.Column="0"
                        ToolTip="Buscar"
                        Background="Transparent"
                        BorderThickness="0">
                    <Border CornerRadius="12" Background="Transparent">
                        <mah:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                              HorizontalAlignment="Center" Foreground="#99000000" />
                    </Border>
                </Button>

                <!-- TextBox sin bordes, usa Hint de MaterialDesign -->
                <TextBox x:Name="SearchBox" Grid.Column="1"
                         BorderThickness="0" Background="Transparent"
                         VerticalContentAlignment="Center" Padding="0"
                         FontSize="14" Foreground="#DD000000"
                         materialDesign:HintAssist.Hint="Search (Ctrl+/)"
                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                         materialDesign:TextFieldAssist.HasClearButton="False"
                         Text="{Binding DataContext.GlobalSearch,
                 RelativeSource={RelativeSource AncestorType=Window},
                 UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Botón limpiar (solo visible cuando hay texto) -->
                <Button Grid.Column="2"
                        Command="{Binding ClearSearchCommand}"
                        Background="Transparent" BorderThickness="0"
                        Width="44" Height="44">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Border CornerRadius="12" Background="Transparent">
                        <mah:PackIconMaterial Kind="CloseCircleOutline" Width="18" Height="18"
                                              VerticalAlignment="Center" HorizontalAlignment="Center"
                                              Foreground="#99000000" />
                    </Border>
                </Button>
            </Grid>


            <!-- ==== ACCIONES DERECHA ==== -->
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        VerticalAlignment="Center" Margin="25,0,25,0">


                <!-- Modo oscuro (placeholder) -->
                <Button Style="{StaticResource HeaderIconButton}">
                    <mah:PackIconMaterial Kind="WeatherNight" Width="15" Height="15" />
                </Button>

                <!-- Notificaciones con badge rojo -->
                <Grid>
                    <Button Style="{StaticResource HeaderIconButton}" Command="{Binding OpenNotificationsCommand}">
                        <mah:PackIconMaterial Kind="BellOutline" Width="15" Height="15" />
                    </Button>
                    <Border Background="#FFEB5757" CornerRadius="8"
                            MinWidth="15" Height="15"
                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,2,0"
                            Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{Binding NotificationsCount}" Foreground="White"
                                   FontSize="10" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>