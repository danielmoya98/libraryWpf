<UserControl x:Class="library.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:library.ViewModels"
             x:Name="root"
             SnapsToDevicePixels="True"
             Background="Transparent">

    

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:BoolToIconConverter x:Key="BoolToIcon" xmlns:converters="clr-namespace:library.Converters" />
        <converters:BoolToTextConverter x:Key="BoolToText" xmlns:converters="clr-namespace:library.Converters" />

        <!-- Botón de icono para el header -->
        <Style x:Key="HeaderIconButton" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextMuted}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" CornerRadius="12" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brush.Hover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brush.Hover}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ======= TOPBAR COMO MATERIAL CARD ======= -->
    <materialDesign:Card
        UniformCornerRadius="10"
        Padding="5"
        Margin="0 8 8 8"
        Background="{DynamicResource Brush.Card}"
        BorderBrush="{DynamicResource Brush.Border}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- SEARCH PILL -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />   <!-- icono -->
                    <ColumnDefinition Width="*" />      <!-- texto -->
                    <ColumnDefinition Width="44" />     <!-- limpiar -->
                </Grid.ColumnDefinitions>

                <!-- Icono de búsqueda -->
                <Button Grid.Column="0"
                        ToolTip="Buscar"
                        Style="{StaticResource HeaderIconButton}"
                        Background="Transparent"
                        BorderThickness="0">
                    <mah:PackIconMaterial Kind="Magnify" Width="15" Height="15"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Foreground="{DynamicResource Brush.TextMuted}" />
                </Button>

                <!-- Caja de búsqueda -->
                <TextBox x:Name="SearchBox" Grid.Column="1"
                         BorderThickness="0" Background="Transparent"
                         VerticalContentAlignment="Center" Padding="0"
                         FontSize="14"
                         Foreground="{DynamicResource Brush.Text}"
                         materialDesign:HintAssist.Hint="Search (Ctrl+/)"
                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                         materialDesign:TextFieldAssist.HasClearButton="False"
                         Text="{Binding DataContext.GlobalSearch,
                                        RelativeSource={RelativeSource AncestorType=Window},
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!-- Botón limpiar -->
                <Button Grid.Column="2"
                        Command="{Binding ClearSearchCommand}"
                        Background="Transparent" BorderThickness="0"
                        Width="44" Height="44">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource HeaderIconButton}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <mah:PackIconMaterial Kind="CloseCircleOutline" Width="18" Height="18"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Foreground="{DynamicResource Brush.TextMuted}" />
                </Button>
            </Grid>

            <!-- ==== ACCIONES DERECHA ==== -->
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        VerticalAlignment="Center" Margin="25,0,25,0">

                <!-- Toggle tema -->
                <Button Command="{Binding ToggleThemeCommand}" Style="{StaticResource HeaderIconButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <mah:PackIconMaterial Width="15" Height="15"
                                              Foreground="{DynamicResource Brush.Text}"
                                              Kind="{Binding IsDarkTheme, Converter={StaticResource BoolToIcon},
                                                             ConverterParameter='WeatherNight|WhiteBalanceSunny'}" />
                    </StackPanel>
                </Button>

                <!-- Perfil usuario -->
                <Button Style="{StaticResource HeaderIconButton}" Command="{Binding EditUserCommand}" CommandParameter="{Binding CurrentUser}">
                    <mah:PackIconMaterial Kind="FaceManProfile" Width="15" Height="15" />
                </Button>
                
                <!-- Notificaciones -->
                <Grid>
                    <Button Style="{StaticResource HeaderIconButton}" Command="{Binding OpenNotificationsCommand}">
                        <mah:PackIconMaterial Kind="BellOutline" Width="15" Height="15"
                                              Foreground="{DynamicResource Brush.Text}"
                                              />
                    </Button>
                    <Border Background="#FFEB5757" CornerRadius="8"
                            MinWidth="15" Height="15"
                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,2,0"
                            Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{Binding NotificationsCount}" Foreground="White"
                                   FontSize="10" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
