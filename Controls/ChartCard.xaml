<!-- Controls/ChartCard.xaml -->
<UserControl x:Class="library.Controls.ChartCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinHeight="260" MinWidth="280">
    <materialDesign:Card Padding="16"
                         Background="{DynamicResource Brush.Card}"
                         BorderBrush="{DynamicResource Brush.Border}"
                         BorderThickness="1"
                         UniformCornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Foreground="{DynamicResource Brush.Text}"/>

            <!-- Usa ChartContent en lugar de Content -->
            <ContentPresenter Grid.Row="1"
                              Margin="0,8,0,0"
                              Content="{Binding ChartContent, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </Grid>
    </materialDesign:Card>
</UserControl>