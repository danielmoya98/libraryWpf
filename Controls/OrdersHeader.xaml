<UserControl x:Class="library.Controls.OrdersHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Name="root">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Resources/Themes/CustomersTable.Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <!-- Header -->
  <Grid Margin="10,10,10,6">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <!-- Izquierda: título -->
    <StackPanel Orientation="Horizontal"
                Grid.Column="0"
                VerticalAlignment="Center">
      <TextBlock Text="Reservas"
                 FontWeight="SemiBold"
                 FontSize="16"
                 Foreground="{StaticResource TitleFg}"
                 Margin="0,0,6,0" />
      <mah:PackIconMaterial Kind="ArrowTopRight"
                            Width="12" Height="12"
                            VerticalAlignment="Center" />
    </StackPanel>

    <!-- Derecha: botón -->
    <StackPanel Orientation="Horizontal"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">
      <Button Command="{Binding GenerateReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <StackPanel Orientation="Horizontal">
          <mah:PackIconMaterial Kind="FileChartOutline"
                                Width="18" Height="18"
                                Margin="0,0,8,0" />
          <TextBlock Text="Generar reporte" />
        </StackPanel>
      </Button>
    </StackPanel>
  </Grid>
</UserControl>
