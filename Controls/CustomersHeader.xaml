<UserControl x:Class="library.Controls.CustomersHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/iconpacks"
             MinHeight="48">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <!-- TÃ­tulo: Clientes (N) -->
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
      <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 FontSize="20" FontWeight="SemiBold" />
      <TextBlock Text="(" FontSize="20" FontWeight="SemiBold" Foreground="#666"/>
      <TextBlock Text="{Binding Count, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 FontSize="20" FontWeight="SemiBold" Foreground="#666"/>
      <TextBlock Text=")" FontSize="20" FontWeight="SemiBold" Foreground="#666"/>
    </StackPanel>

    <!-- Botones -->
    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
      <!-- Generar reporte -->
      <Button Command="{Binding ReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
              Margin="0 0 10 0"
              Padding="14,8">
        <StackPanel Orientation="Horizontal" >
          <mah:PackIconMaterial Kind="FileChartOutline" Width="18" Height="18" Margin="0 0 5 0"/>
          <TextBlock Text="Generar reporte"/>
        </StackPanel>
      </Button>

      <!-- Nuevo cliente -->
      <Button Command="{Binding AddCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
              
              Padding="14,8">
        <StackPanel Orientation="Horizontal" >
          <mah:PackIconMaterial Kind="AccountPlus" Width="18" Height="18" Margin="0 0 5 0"/>
          <TextBlock Text="Nuevo cliente"/>
        </StackPanel>
      </Button>
    </StackPanel>
  </Grid>
</UserControl>
