<UserControl x:Class="library.Dialogs.ConfirmDeleteCustomerDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:library.Converters"
             MinWidth="420" MaxWidth="560">

  <!-- ===== estilos locales (píldora) ===== -->
  <UserControl.Resources>
    <converters:InitialsConverter x:Key="Initials"/>

    <SolidColorBrush x:Key="BtnOutlineBorder" Color="#E5E9F0"/>
    <SolidColorBrush x:Key="BtnOutlineHover"  Color="#F6F8FF"/>
    <SolidColorBrush x:Key="BtnDanger"        Color="#EF4444"/>
    <SolidColorBrush x:Key="BtnDangerHover"   Color="#DC2626"/>

    <Style x:Key="PillButtonBase" TargetType="Button">
      <Setter Property="Height" Value="36"/>
      <Setter Property="MinWidth" Value="120"/>
      <Setter Property="Padding" Value="12,0"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="{StaticResource BtnOutlineBorder}"/>
      <Setter Property="Foreground" Value="#1F2937"/>
      <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="bd" CornerRadius="18"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="bd" Property="Background" Value="{StaticResource BtnOutlineHover}"/>
              </Trigger>
              <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.55"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="PillOutlineButton" TargetType="Button" BasedOn="{StaticResource PillButtonBase}"/>
    <Style x:Key="PillDangerButton"  TargetType="Button" BasedOn="{StaticResource PillButtonBase}">
      <Setter Property="Background"  Value="{StaticResource BtnDanger}"/>
      <Setter Property="BorderBrush" Value="{StaticResource BtnDanger}"/>
      <Setter Property="Foreground"  Value="White"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="bd" CornerRadius="18"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="bd" Property="Background" Value="{StaticResource BtnDangerHover}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Resources>

  <!-- ===== contenido ===== -->
  <Border Padding="24,20,24,16">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- Cliente + mensaje -->
      <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,16,0,0">
        <!-- Avatar -->
        <Grid Width="56" Height="56" Margin="0,0,12,0">
          <Ellipse Fill="#EDF2F7"/>
          <!-- Foto -->
          <Ellipse>
            <Ellipse.Style>
              <Style TargetType="Ellipse">
                <Setter Property="Visibility" Value="Visible"/>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding PhotoPath}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Ellipse.Style>
            <Ellipse.Fill>
              <ImageBrush ImageSource="{Binding PhotoPath}" Stretch="UniformToFill"/>
            </Ellipse.Fill>
          </Ellipse>
          <!-- Iniciales cuando no hay foto -->
          <Border CornerRadius="28" Background="#EEF2F7" BorderBrush="#E2E8F0" BorderThickness="1">
            <Border.Style>
              <Style TargetType="Border">
                <Setter Property="Visibility" Value="Collapsed"/>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding PhotoPath}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <TextBlock Text="{Binding FullName, Converter={StaticResource Initials}}"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontWeight="SemiBold" Foreground="#475569"/>
          </Border>
        </Grid>

        <StackPanel>
          <TextBlock Text="{Binding FullName}" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#1F2937"/>
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2,0,0">
            <TextBlock Text="{Binding Email}" Foreground="#6B7280" Margin="0,0,8,0"/>
            <TextBlock Text="•" Foreground="#CBD5E1" Margin="0,0,8,0"/>
            <TextBlock Text="{Binding CI}" Foreground="#6B7280"/>
          </StackPanel>
          <TextBlock Margin="0,10,0,0" Foreground="#4B5563" TextWrapping="Wrap"
                     Text="¿Seguro que deseas eliminar este cliente? Esta acción no se puede deshacer."/>
        </StackPanel>
      </StackPanel>

      <!-- Botones -->
      <DockPanel Grid.Row="2" LastChildFill="False" HorizontalAlignment="Center" Margin="0,16,0,0">
        <Button Style="{StaticResource PillDangerButton}" DockPanel.Dock="Right"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                CommandParameter="True">
          <StackPanel Orientation="Horizontal">
            <mah:PackIconMaterial Kind="TrashCanOutline" Width="18" Height="18" Margin="0,0,8,0"/>
            <TextBlock Text="Eliminar"/>
          </StackPanel>
        </Button>

        <Button Style="{StaticResource PillOutlineButton}" DockPanel.Dock="Right" Margin="8,0,0,0"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                CommandParameter="False">
          <StackPanel Orientation="Horizontal">
            <mah:PackIconMaterial Kind="Close" Width="18" Height="18" Margin="0,0,8,0"/>
            <TextBlock Text="Cancelar"/>
          </StackPanel>
        </Button>
      </DockPanel>
    </Grid>
  </Border>
</UserControl>
