<UserControl x:Class="library.Views.Auth.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:auth="clr-namespace:library.Views.Auth">

   
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Convertidor inverso -->
        <Style x:Key="InverseVisibilityConverter" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="False">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Fondo principal -->
    <Grid Background="{DynamicResource App.BackgroundBrush}">

        <!-- Tarjeta de login centrada -->
        <Border x:Name="LoginCard"
                Width="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="{DynamicResource App.SurfaceBrush}"
                BorderBrush="{DynamicResource App.BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="40,32"
                Opacity="0">

            <!-- Animación de entrada -->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.4" />
                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                From="0,20,0,0" To="0,0,0,0" Duration="0:0:0.4">
                                <ThicknessAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </ThicknessAnimation.EasingFunction>
                            </ThicknessAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <StackPanel>

                <!-- Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,24">
                    <!-- Icono -->
                    <Border Background="{DynamicResource App.PrimarySoftBrush}"
                            Width="56" Height="56"
                            CornerRadius="12"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12">
                        <mah:PackIconMaterial Kind="BookOpenVariant"
                                              Width="28" Height="28"
                                              Foreground="{DynamicResource App.PrimaryBrush}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                    </Border>

                    <!-- Título -->
                    <TextBlock Text="Biblioteca"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4" />

                    <!-- Subtítulo -->
                    <TextBlock Text="Sistema de Gestión Bibliotecaria"
                               FontSize="14"
                               Foreground="{DynamicResource App.TextSecondaryBrush}"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Mensaje de error -->
                <Border Background="{DynamicResource Brush.DangerSoft}"
                        BorderBrush="{DynamicResource Brush.DangerBorder}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12,10"
                        Margin="0,0,0,16"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">
                        <mah:PackIconMaterial Kind="AlertCircle"
                                              Width="16" Height="16"
                                              Foreground="{DynamicResource Brush.Danger}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   FontSize="13"
                                   Foreground="{DynamicResource Brush.Danger}"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Formulario -->
                <StackPanel Margin="0,0,0,24">

                    <!-- Usuario -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Usuario"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource App.TextPrimaryBrush}"
                                   Margin="0,0,0,6" />
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"
                                 Padding="12"
                                 FontSize="14"
                                 Background="{DynamicResource App.SurfaceBrush}"
                                 BorderBrush="{DynamicResource App.BorderBrush}"
                                 BorderThickness="1.5"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Ingresa tu usuario o email" />
                    </StackPanel>

                    <!-- Contraseña -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Contraseña"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource App.TextPrimaryBrush}"
                                   Margin="0,0,0,6" />

                        <Grid>
                            <!-- PasswordBox -->
                            <PasswordBox x:Name="PasswordBox"
                                         Height="44"
                                         Padding="12"
                                         FontSize="14"
                                         Background="{DynamicResource App.SurfaceBrush}"
                                         BorderBrush="{DynamicResource App.BorderBrush}"
                                         BorderThickness="1.5"
                                         materialDesign:HintAssist.Hint="Ingresa tu contraseña">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox"
                                           BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>

                            <!-- TextBox (cuando se muestra la contraseña) -->
                            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"
                                     Padding="12"
                                     FontSize="14"
                                     Background="{DynamicResource App.SurfaceBrush}"
                                     BorderBrush="{DynamicResource App.BorderBrush}"
                                     BorderThickness="1.5"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Ingresa tu contraseña"
                                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVis}}" />

                            <!-- Botón toggle contraseña -->
                            <Button Width="32" Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Command="{Binding TogglePasswordCommand}">
                                <mah:PackIconMaterial Width="18" Height="18"
                                                      Foreground="{DynamicResource App.IconBrush}">
                                    <mah:PackIconMaterial.Style>
                                        <Style TargetType="mah:PackIconMaterial">
                                            <Setter Property="Kind" Value="EyeOff" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                                    <Setter Property="Kind" Value="Eye" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </mah:PackIconMaterial.Style>
                                </mah:PackIconMaterial>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Recordarme -->
                    <CheckBox IsChecked="{Binding RememberMe}"
                              Content="Recordar sesión"
                              FontSize="13"
                              Foreground="{DynamicResource App.TextSecondaryBrush}" />

                </StackPanel>

                <!-- Botón Login -->
                <Button Height="48"
                        Background="{DynamicResource App.PrimaryBrush}"
                        BorderThickness="0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding CanLogin}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,0,20">

                    <Grid>
                            <!-- Contenido normal -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}, ConverterParameter=True}">
                                <mah:PackIconMaterial Kind="Login"
                                                  Width="18" Height="18"
                                                  Margin="0,0,8,0" />
                            <TextBlock Text="Iniciar Sesión" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Enlaces adicionales -->
                <WrapPanel HorizontalAlignment="Center"
                           Orientation="Horizontal"
                           ItemWidth="Auto">
                    
                    <!-- Olvidaste contraseña -->
                    <Button Content="¿Olvidaste tu contraseña?"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            Foreground="{DynamicResource App.PrimaryBrush}"
                            Command="{Binding ForgotPasswordCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="4,0" />

                    <!-- Separador -->
                    <TextBlock Text="•" 
                               Foreground="{DynamicResource App.BorderBrush}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="4,0" />

                    <!-- Ver usuarios BD -->
                    <Button Content="Ver Usuarios BD"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            Foreground="{DynamicResource App.TextSecondaryBrush}"
                            Command="{Binding CheckDatabaseUsersCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="4,0" />

                    <!-- Separador -->
                    <TextBlock Text="•" 
                               Foreground="{DynamicResource App.BorderBrush}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="4,0" />

                    <!-- Ayuda -->
                    <Button Content="Ayuda"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            Foreground="{DynamicResource App.TextSecondaryBrush}"
                            Command="{Binding ShowHelpCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="4,0" />
                </WrapPanel>

                <!-- Información adicional -->
                <TextBlock Text="Conectando con base de datos real de Supabase"
                           FontSize="10"
                           Foreground="{DynamicResource App.TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           FontStyle="Italic" />

            </StackPanel>
        </Border>
    </Grid>
</UserControl>