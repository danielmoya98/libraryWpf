<Application x:Class="library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/Auth/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 1) Paleta global (colores base compartidos) -->
                <ResourceDictionary Source="Resources/Themes/Palette.xaml"/>

                <!-- 2) Tema por defecto (elige Light o Dark como arranque) -->
                <ResourceDictionary Source="Resources/Themes/Theme.Light.xaml"/>

                 <ResourceDictionary Source="Resources/Themes/CustomersTable.Styles.xaml"/>
     
                <!-- 3) Estilos de controles de tu app -->
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>

                <!-- 4) MDIX defaults (al final, para que no pisen tus brushes) -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>